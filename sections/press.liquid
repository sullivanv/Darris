{% comment %}
  SECTION : Press
  - Affiche des logos de presse cliquables
  - Nombre de colonnes desktop : 2 → 6
  - Nombre de colonnes mobile : 1 → 3
  - Titre et texte optionnels
  - Padding top / bottom
  - Max-width configurable + centered container
  - Images : height desktop + height mobile / object-fit:contain
  - Blocks : image + lien cliquable
  - Alignment centered
  - Option slider mobile
{% endcomment %}

{{ 'press.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

{%- style -%}
	{% render 'section-margin' %}
{%- endstyle -%}

<section
  class="press section-{{ section.id }}{% if section.settings.enable_slider_mobile %} press--slider-mobile{% endif %}"
  style="
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --container-width: {{ section.settings.container_width }}px;
    --logo-height-desktop: {{ section.settings.logo_height_desktop }}px;
    --logo-height-mobile: {{ section.settings.logo_height_mobile }}px;
    --columns-desktop: {{ section.settings.columns_desktop }};
    --columns-mobile: {{ section.settings.columns_mobile }};
  "
>

  <div class="press__container container">

    {%- if section.settings.heading != blank or section.settings.description != blank -%}
      <div class="press__header">
        {%- if section.settings.heading != blank -%}
          <h2 class="press__heading {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.description != blank -%}
          <div class="press__description">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="press__grid{% if section.settings.enable_slider_mobile %} swiper{% endif %}" data-section-id="{{ section.id }}">

      <div class="{% if section.settings.enable_slider_mobile %}swiper-wrapper{% endif %}">
        {% for block in section.blocks %}
          <div class="press__item{% if section.settings.enable_slider_mobile %} swiper-slide{% endif %}" {{ block.shopify_attributes }}>

            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="press__link" target="_blank" rel="noopener noreferrer">
            {%- endif -%}

              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 600 }}"
                  srcset="
                    {{ block.settings.image | image_url: width: 300 }} 300w,
                    {{ block.settings.image | image_url: width: 600 }} 600w
                  "
                  sizes="(max-width: 800px) 300px, 600px"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  class="press__logo"
                >
              {%- else -%}
                <div class="press__logo-placeholder">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {%- endif -%}

            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}

          </div>
        {% endfor %}
      </div>

      {% if section.settings.enable_slider_mobile and section.settings.show_navigation %}
        <div class="swiper-button-next press__nav"></div>
        <div class="swiper-button-prev press__nav"></div>
      {% endif %}

      {% if section.settings.enable_slider_mobile and section.settings.show_pagination %}
        <div class="swiper-pagination press__pagination"></div>
      {% endif %}

    </div>

  </div>

</section>

{% if section.settings.enable_slider_mobile %}
  <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>
  <script>
    (function() {
      const sectionId = '{{ section.id }}';
      let swiperInstance = null;

      function initSwiper() {
        const swiperEl = document.querySelector('[data-section-id="' + sectionId + '"]');
        
        if (!swiperEl) return;

        if (window.innerWidth <= 800) {
          // Initialize swiper on mobile
          if (!swiperInstance) {
            swiperInstance = new Swiper(swiperEl, {
              slidesPerView: 1,
              spaceBetween: 20,
              centeredSlides: true,
              loop: false,
              {% if section.settings.show_pagination %}
              pagination: {
                el: '.swiper-pagination',
                clickable: true,
              },
              {% endif %}
              {% if section.settings.show_navigation %}
              navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
              },
              {% endif %}
            });
          }
        } else {
          // Destroy swiper on desktop
          if (swiperInstance) {
            swiperInstance.destroy(true, true);
            swiperInstance = null;
          }
        }
      }

      // Initialize on load
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initSwiper);
      } else {
        initSwiper();
      }

      // Re-initialize on resize (debounced)
      let resizeTimer;
      window.addEventListener('resize', function() {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(initSwiper, 250);
      });
    })();
  </script>
{% endif %}

