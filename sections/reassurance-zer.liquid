      "info": "Utilisé uniquement si le slider mobile est désactivé"
    },
    {
      "type": "header",
      "content": "Espacement"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 50
    },
    {
      "type": "range",
      "id": "container_width",
      "label": "Largeur maximum du container",
      "min": 600,
      "max": 1800,
      "step": 20,
      "default": 1200
    },
    {
      "type": "header",
      "content": "Icônes"
    },
    {
      "type": "range",
      "id": "icon_height_desktop",
      "label": "Hauteur icône desktop",
      "min": 20,
      "max": 200,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "icon_height_mobile",
      "label": "Hauteur icône mobile",
      "min": 20,
      "max": 200,
      "step": 5,
      "unit": "px",
      "default": 50
