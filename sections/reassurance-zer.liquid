  ],
  "blocks": [
    {
      "type": "item",
      "name": "Élément",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Texte"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Réassurance Zerance",
      "category": "Content"
    }
  ]
}
