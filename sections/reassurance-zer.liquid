{% comment %}
  SECTION : Réassurance Zerance
  - Nombre de colonnes desktop : 2 → 6
  - Nombre de colonnes mobile : 1 → 3
  - Padding top / bottom
  - Max-width configurable + centered container
  - Images : height desktop + height mobile / object-fit:contain
  - Blocks : image, titre, texte
  - Alignment centered
  - Native typography Madrid
  - Grille simple
{% endcomment %}

{{ 'reassurance-zer.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

<section
  class="reassurance-zer{% if section.settings.enable_slider_mobile %} reassurance-zer--slider-mobile{% endif %}"
  style="
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --container-width: {{ section.settings.container_width }}px;
    --icon-height-desktop: {{ section.settings.icon_height_desktop }}px;
    --icon-height-mobile: {{ section.settings.icon_height_mobile }}px;
    --columns-desktop: {{ section.settings.columns_desktop }};
    --columns-mobile: {{ section.settings.columns_mobile }};
  "
>

  <div class="reassurance-zer__container">

    <div class="reassurance-zer__grid{% if section.settings.enable_slider_mobile %} swiper{% endif %}" data-section-id="{{ section.id }}">

      <div class="{% if section.settings.enable_slider_mobile %}swiper-wrapper{% endif %}">
        {% for block in section.blocks %}
          <div class="reassurance-zer__item{% if section.settings.enable_slider_mobile %} swiper-slide{% endif %}" {{ block.shopify_attributes }}>

            {%- if block.settings.image != blank -%}
              <img
                src="{{ block.settings.image | image_url: width: 300 }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                class="reassurance-zer__icon"
              >
            {%- endif -%}

            {%- if block.settings.title != blank -%}
              <h3 class="reassurance-zer__title">
                {{ block.settings.title }}
              </h3>
            {%- endif -%}

            {%- if block.settings.text != blank -%}
              <div class="reassurance-zer__text">
                {{ block.settings.text }}
              </div>
            {%- endif -%}

          </div>
        {% endfor %}
      </div>

      {% if section.settings.enable_slider_mobile and section.settings.show_navigation %}
        <div class="swiper-button-next reassurance-zer__nav"></div>
        <div class="swiper-button-prev reassurance-zer__nav"></div>
      {% endif %}

      {% if section.settings.enable_slider_mobile and section.settings.show_pagination %}
        <div class="swiper-pagination reassurance-zer__pagination"></div>
      {% endif %}

    </div>

  </div>

</section>

{% if section.settings.enable_slider_mobile %}
  <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>
  <script>
    (function() {
      const sectionId = '{{ section.id }}';
      let swiperInstance = null;

      function initSwiper() {
        const swiperEl = document.querySelector('[data-section-id="' + sectionId + '"]');
        
        if (!swiperEl) return;

        if (window.innerWidth <= 800) {
          // Initialize swiper on mobile
          if (!swiperInstance) {
            swiperInstance = new Swiper(swiperEl, {
              slidesPerView: 1,
              spaceBetween: 20,
              centeredSlides: true,
              loop: false,
              {% if section.settings.show_pagination %}
              pagination: {
                el: '.swiper-pagination',
                clickable: true,
              },
              {% endif %}
              {% if section.settings.show_navigation %}
              navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
              },
              {% endif %}
            });
          }
        } else {
          // Destroy swiper on desktop
          if (swiperInstance) {
            swiperInstance.destroy(true, true);
            swiperInstance = null;
          }
        }
      }

      // Initialize on load
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initSwiper);
      } else {
        initSwiper();
      }

      // Re-initialize on resize (debounced)
      let resizeTimer;
      window.addEventListener('resize', function() {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(initSwiper, 250);
      });
    })();
  </script>
{% endif %}

{% schema %}
{
  "name": "Réassurance Zerance",
  "settings": [
    {
      "type": "header",
      "content": "Slider Mobile"
    },
    {
      "type": "checkbox",
      "id": "enable_slider_mobile",
      "label": "Activer le slider sur mobile",
      "default": true,
      "info": "Les éléments défilent en mode carousel sur mobile (1 slide à la fois, centré)"
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Afficher la pagination",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Afficher les flèches de navigation",
      "default": false
    },
    {
      "type": "header",
      "content": "Colonnes"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Colonnes desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "label": "Colonnes mobile (grid)",
